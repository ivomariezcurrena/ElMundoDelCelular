<style>
  main {
    padding-top: 60px;
  }

  .hero {
    min-height: 85vh;
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    gap: 3rem;
    padding: 4rem 2rem;
    background: #f5f5f7;
    position: relative;
  }

  .hero-content {
    text-align: center;
    z-index: 2;
  }

  .hero-title {
    font-size: clamp(2.5rem, 7vw, 5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.1;
    color: #1d1d1f;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2.5vw, 1.75rem);
    color: #6e6e73;
    line-height: 1.5;
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-image img {
    width: 100%;
    max-width: 900px;
    height: auto;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .hero {
      grid-template-columns: 1fr 1.2fr;
      padding: 4rem 4rem;
      gap: 3rem;
    }

    .hero-content {
      text-align: left;
    }

    .hero-subtitle {
      margin: 0;
    }

    .hero-image img {
      max-width: 750px;
    }
  }

  @media (min-width: 1200px) {
    .hero {
      padding: 4rem 6rem;
    }

    .hero-image img {
      max-width: 900px;
    }
  }

  .features {
    padding: 6rem 2rem;
    background: var(--color-bg);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: 4rem;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: var(--color-surface);
    padding: 3rem 2rem;
    border-radius: 20px;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .feature-card p {
    color: #86868b;
    line-height: 1.6;
  }

  .showcase {
    padding: 6rem 2rem;
    background: var(--color-surface);
  }

  .showcase-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .showcase-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .showcase-text {
    font-size: 1.2rem;
    color: #86868b;
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .link-arrow {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: transform 0.3s;
    display: inline-block;
  }

  .link-arrow:hover {
    transform: translateX(8px);
  }
</style>
