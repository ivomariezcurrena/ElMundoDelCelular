---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';
import type { Telefono } from '../lib/supabase';

// Obtener productos desde Supabase
let productos: Telefono[] = [];
let error: string | null = null;

try {
  const { data, error: fetchError } = await supabase
    .from('telefonos')
    .select('*')
    .order('created_at', { ascending: false });
  
  if (fetchError) throw fetchError;
  productos = data || [];
} catch (e) {
  error = e instanceof Error ? e.message : 'Error al cargar productos';
  console.error('Error fetching productos:', e);
}
---

<Layout title="Productos - El Mundo del Celular">
  <main class="productos-page">
    <section class="productos-hero">
      <div class="container">
        <h1 class="page-title">Nuestra colecci√≥n</h1>
        <p class="page-subtitle">Los mejores smartphones seleccionados para ti</p>
      </div>
    </section>

    <section class="productos-grid-section">
      <div class="container">
        {error && (
          <div class="error-message">
            <p>‚ö†Ô∏è {error}</p>
            <p class="error-hint">
              Aseg√∫rate de configurar las variables de entorno SUPABASE_URL y SUPABASE_ANON_KEY
            </p>
          </div>
        )}

        {!error && productos.length === 0 && (
          <div class="empty-state">
            <div class="empty-icon">üì±</div>
            <h2>No hay productos disponibles</h2>
            <p>Pr√≥ximamente agregaremos nuevos smartphones incre√≠bles</p>
          </div>
        )}

        {!error && productos.length > 0 && (
          <div class="productos-grid">
            {productos.map((producto) => (
              <article class="producto-card">
                <div class="producto-image">
                  <img 
                    src={producto.imagen_url} 
                    alt={producto.nombre}
                    loading="lazy"
                  />
                </div>
                <div class="producto-info">
                  <h3 class="producto-nombre">{producto.nombre}</h3>
                  <p class="producto-descripcion">{producto.descripcion}</p>
                  <div class="producto-footer">
                    <span class="producto-precio">
                      ${producto.precio.toLocaleString('es-AR')}
                    </span>
                    <button class="btn-comprar">Comprar</button>
                  </div>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  .productos-page {
    padding-top: 60px;
    min-height: 100vh;
  }

  .productos-hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 4rem 2rem;
    text-align: center;
    animation: fadeIn 0.8s ease-out;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    animation: fadeIn 1s ease-out 0.2s both;
  }

  .page-subtitle {
    font-size: clamp(1rem, 2vw, 1.3rem);
    opacity: 0.95;
    animation: fadeIn 1s ease-out 0.4s both;
  }

  .productos-grid-section {
    padding: 4rem 2rem;
  }

  .error-message {
    background: #fff3cd;
    border: 1px solid #ffc107;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    color: #856404;
    animation: fadeIn 0.8s ease-out;
  }

  .error-message p {
    margin-bottom: 0.5rem;
  }

  .error-hint {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    animation: fadeIn 0.8s ease-out;
  }

  .empty-icon {
    font-size: 5rem;
    margin-bottom: 1rem;
    opacity: 0.3;
  }

  .empty-state h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .empty-state p {
    color: #86868b;
    font-size: 1.1rem;
  }

  .productos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    animation: fadeIn 0.8s ease-out;
  }

  .producto-card {
    background: var(--color-surface);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: scaleIn 0.5s ease-out both;
  }

  .producto-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .producto-image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f5f7 0%, #e8e8ed 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .producto-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .producto-card:hover .producto-image img {
    transform: scale(1.05);
  }

  .producto-info {
    padding: 1.5rem;
  }

  .producto-nombre {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .producto-descripcion {
    color: #86868b;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .producto-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .producto-precio {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
  }

  .btn-comprar {
    background: var(--color-accent);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 980px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-comprar:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(0, 113, 227, 0.3);
  }

  .btn-comprar:active {
    transform: scale(0.98);
  }

  @media (max-width: 768px) {
    .productos-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
