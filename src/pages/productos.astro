---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import { supabase, CATEGORIAS } from '../lib/supabase';
import type { Telefono, CategoriaProducto } from '../lib/supabase';

// Configuraci칩n de localizaci칩n
const LOCALE = 'es-AR';

// Obtener productos desde Supabase
let productos: Telefono[] = [];
let error: string | null = null;

try {
  const { data, error: fetchError } = await supabase
    .from('telefonos')
    .select('*')
    .order('created_at', { ascending: false });
  
  if (fetchError) throw fetchError;
  productos = data || [];
} catch (e) {
  error = e instanceof Error ? e.message : 'Error al cargar productos';
  console.error('Error fetching productos:', e);
}

// Agrupar productos por categor칤a
const productosPorCategoria = productos.reduce((acc, producto) => {
  if (!acc[producto.categoria]) {
    acc[producto.categoria] = [];
  }
  acc[producto.categoria].push(producto);
  return acc;
}, {} as Record<CategoriaProducto, Telefono[]>);
---

<Layout title="Productos - El Mundo del Celular">
  <main class="productos-page">
    <section class="productos-hero">
      <div class="container">
        <h1 class="page-title">Nuestra colecci칩n</h1>
        <p class="page-subtitle">Encuentra el producto perfecto para ti</p>
      </div>
    </section>

    {error && (
      <section class="error-section">
        <div class="container">
          <div class="error-message">
            <p>丘멆잺 {error}</p>
            <p class="error-hint">
              Aseg칰rate de configurar las variables de entorno SUPABASE_URL y SUPABASE_ANON_KEY
            </p>
          </div>
        </div>
      </section>
    )}

    {!error && productos.length === 0 && (
      <section class="empty-section">
        <div class="container">
          <div class="empty-state">
            <div class="empty-icon">游님</div>
            <h2>No hay productos disponibles</h2>
            <p>Pr칩ximamente agregaremos nuevos productos incre칤bles</p>
          </div>
        </div>
      </section>
    )}

    {!error && productos.length > 0 && (
      <>
        <!-- Buscador -->
        <section class="search-section">
          <div class="container">
            <div class="search-wrapper">
              <input 
                type="text" 
                id="searchInput" 
                class="search-input" 
                placeholder="Buscar productos..."
              />
              <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM18 18l-4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </div>
          </div>
        </section>

        <!-- Pesta침as de categor칤as -->
        <section class="categorias-tabs">
          <div class="container">
            <div class="tabs-wrapper">
              <button class="tab-btn active" data-categoria="todos">
                Todos
              </button>
              {Object.entries(CATEGORIAS).map(([key, value]) => (
                <button class="tab-btn" data-categoria={key}>
                  {value.nombre}
                </button>
              ))}
            </div>
          </div>
        </section>

        <!-- Secciones de productos por categor칤a -->
        <section class="productos-sections">
          <div class="container">
            {Object.entries(CATEGORIAS).map(([categoriaKey, categoriaInfo]) => {
              const productosCategoria = productosPorCategoria[categoriaKey as CategoriaProducto] || [];
              
              if (productosCategoria.length === 0) return null;
              
              return (
                <div class="categoria-section" data-categoria={categoriaKey}>
                  <div class="productos-grid">
                    {productosCategoria.map((producto) => (
                      <article class="producto-card">
                        <a href={`/producto/${producto.id}`} class="producto-card-link">
                          <div class="producto-image-wrapper">
                            <Image 
                              src={producto.imagen_url} 
                              alt={producto.nombre}
                              loading="lazy"
                              class="producto-image"
                              width={800}
                              height={800}
                            />
                          </div>
                          <div class="producto-info">
                            <p class="producto-categoria">{categoriaInfo.nombre}</p>
                            <h3 class="producto-nombre">{producto.nombre}</h3>
                            <p class="producto-descripcion">{producto.descripcion}</p>
                            <div class="producto-footer">
                              <span class="producto-precio">
                                ${producto.precio.toLocaleString(LOCALE)}
                              </span>
                              <a 
                                href={`https://wa.me/5491165874209?text=Hola!%20Estoy%20interesado%20en%20${encodeURIComponent(producto.nombre)}%20-%20$${producto.precio}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="btn-contactar"
                              >
                                Contactar
                              </a>
                            </div>
                          </div>
                        </a>
                      </article>
                    ))}
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      </>
    )}
  </main>
</Layout>

<style>
  .productos-page {
    padding-top: 60px;
    min-height: 100vh;
    background: #fbfbfd;
  }

  .productos-hero {
    background: #1d1d1f;
    color: white;
    padding: 4rem 2rem;
    text-align: center;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 600;
    margin-bottom: 0.5rem;
    letter-spacing: -0.01em;
  }

  .page-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.5rem);
    opacity: 0.8;
    font-weight: 400;
  }

  /* Secciones de error y vac칤o */
  .error-section,
  .empty-section {
    padding: 4rem 0;
  }

  .error-message {
    background: #fff3cd;
    border: 1px solid #ffc107;
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    color: #856404;
  }

  .error-message p {
    margin-bottom: 0.5rem;
  }

  .error-hint {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .empty-icon {
    font-size: 5rem;
    margin-bottom: 1rem;
    opacity: 0.3;
  }

  .empty-state h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .empty-state p {
    color: #86868b;
    font-size: 1.1rem;
  }

  /* Buscador */
  .search-section {
    padding: 2rem 0 1.5rem;
    background: white;
    border-bottom: 1px solid #d2d2d7;
  }

  .search-wrapper {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-input {
    width: 100%;
    padding: 0.875rem 3rem 0.875rem 1.25rem;
    border: 1px solid #d2d2d7;
    border-radius: 12px;
    font-size: 1rem;
    background: #f5f5f7;
    transition: all 0.2s;
  }

  .search-input:focus {
    outline: none;
    background: white;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(0, 113, 227, 0.1);
  }

  .search-icon {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #86868b;
    pointer-events: none;
  }

  /* Pesta침as de categor칤as */
  .categorias-tabs {
    background: white;
    border-bottom: 1px solid #d2d2d7;
    position: sticky;
    top: 60px;
    z-index: 100;
  }

  @media (max-width: 768px) {
    .categorias-tabs {
      display: none;
    }
  }

  .tabs-wrapper {
    display: flex;
    gap: 0;
    overflow-x: auto;
    scrollbar-width: none;
  }

  .tabs-wrapper::-webkit-scrollbar {
    display: none;
  }

  .tab-btn {
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    padding: 1.25rem 1.5rem;
    font-size: 0.875rem;
    font-weight: 400;
    color: #6e6e73;
    cursor: pointer;
    transition: all 0.3s;
    white-space: nowrap;
    letter-spacing: -0.01em;
  }

  .tab-btn:hover {
    color: var(--color-text);
  }

  .tab-btn.active {
    color: var(--color-text);
    border-bottom-color: var(--color-text);
  }

  /* Secciones de productos */
  .productos-sections {
    padding: 4rem 0;
  }

  .categoria-section {
    margin-bottom: 0;
  }

  .categoria-section.hidden {
    display: none;
  }

  /* Grid de productos estilo Apple */
  .productos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .productos-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
    }
  }

  @media (min-width: 1200px) {
    .productos-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.25rem;
    }
  }

  /* Tarjetas de producto estilo Apple */
  .producto-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 1px solid transparent;
  }

  .producto-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    border-color: #d2d2d7;
  }

  .producto-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .producto-image-wrapper {
    width: 100%;
    aspect-ratio: 1 / 1;
    background: #fbfbfd;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    overflow: hidden;
  }

  .producto-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .producto-card:hover .producto-image {
    transform: scale(1.04);
  }

  .producto-info {
    padding: 1.25rem 1.5rem 1.5rem;
  }

  .producto-categoria {
    font-size: 0.75rem;
    font-weight: 500;
    color: #f56300;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.25rem;
  }

  .producto-nombre {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
    color: var(--color-text);
    line-height: 1.3;
    letter-spacing: -0.01em;
  }

  .producto-descripcion {
    color: #86868b;
    font-size: 0.875rem;
    line-height: 1.4;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 2.4rem;
  }

  .producto-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #f5f5f7;
  }

  .producto-precio {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
    letter-spacing: -0.01em;
  }

  .btn-contactar {
    background: #25D366;
    color: white;
    border: none;
    padding: 0.5rem 1.25rem;
    border-radius: 980px;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
  }

  .btn-contactar:hover {
    background: #20BA5A;
  }

  .btn-contactar:active {
    transform: scale(0.96);
  }

  @media (max-width: 768px) {
    .productos-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .producto-card {
      border-radius: 16px;
      border: 1px solid #d2d2d7;
    }

    .producto-image-wrapper {
      padding: 2rem;
      aspect-ratio: 1 / 1;
      background: white;
    }

    .producto-info {
      padding: 1.25rem 1.5rem 1.5rem;
    }

    .producto-categoria {
      font-size: 0.6875rem;
      margin-bottom: 0.5rem;
    }

    .producto-nombre {
      font-size: 1.0625rem;
      margin-bottom: 0.5rem;
      line-height: 1.3;
    }

    .producto-descripcion {
      font-size: 0.875rem;
      line-height: 1.5;
      -webkit-line-clamp: 3;
      margin-bottom: 1rem;
      min-height: auto;
    }

    .producto-footer {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 0;
      padding-top: 1rem;
      margin-top: 1rem;
      border-top: 1px solid #f5f5f7;
    }

    .producto-precio {
      font-size: 1.25rem;
    }

    .btn-contactar {
      display: none;
    }
  }
</style>

<script>
  // Funcionalidad del buscador
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const productCards = document.querySelectorAll('.producto-card');

  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
      
      productCards.forEach(card => {
        const productName = card.querySelector('.producto-nombre')?.textContent?.toLowerCase() || '';
        const productDesc = card.querySelector('.producto-descripcion')?.textContent?.toLowerCase() || '';
        const productCategory = card.querySelector('.producto-categoria')?.textContent?.toLowerCase() || '';
        
        if (productName.includes(searchTerm) || productDesc.includes(searchTerm) || productCategory.includes(searchTerm)) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  }

  // Prevenir propagaci칩n del click en botones de WhatsApp
  const whatsappButtons = document.querySelectorAll('.btn-contactar');
  whatsappButtons.forEach(btn => {
    btn.addEventListener('click', (e) => {
      e.stopPropagation();
    });
  });

  // Funcionalidad de las pesta침as
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll<HTMLButtonElement>('.tab-btn');
    const sections = document.querySelectorAll<HTMLDivElement>('.categoria-section');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const categoria = tab.dataset.categoria;

        // Actualizar pesta침as activas
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');

        // Mostrar/ocultar secciones
        if (categoria === 'todos') {
          sections.forEach(section => section.classList.remove('hidden'));
        } else {
          sections.forEach(section => {
            if (section.dataset.categoria === categoria) {
              section.classList.remove('hidden');
            } else {
              section.classList.add('hidden');
            }
          });
        }

        // Scroll suave al inicio de productos
        const productosSection = document.querySelector<HTMLElement>('.productos-sections');
        if (productosSection) {
          window.scrollTo({
            top: productosSection.offsetTop - 120,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>
