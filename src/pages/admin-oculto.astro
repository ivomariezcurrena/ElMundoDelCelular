---
import Layout from '../layouts/Layout.astro';
import { supabase, CATEGORIAS } from '../lib/supabase';
import type { Telefono } from '../lib/supabase';

// Obtener variables de entorno para pasarlas al cliente
const supabaseUrl = import.meta.env.SUPABASE_URL || '';
const supabaseAnonKey = import.meta.env.SUPABASE_ANON_KEY || '';

// Obtener productos existentes
let productos: Telefono[] = [];
try {
  const { data } = await supabase
    .from('telefonos')
    .select('*')
    .order('created_at', { ascending: false });
  productos = data || [];
} catch (e) {
  console.error('Error fetching productos:', e);
}
---

<Layout title="Admin - El Mundo del Celular">
  <main class="admin-page">
    <div class="admin-container">
      <header class="admin-header">
        <h1>Administración</h1>
        <p>Gestiona tu catálogo de productos</p>
      </header>

      <!-- Tabs: Agregar y Gestionar -->
      <div class="admin-tabs">
        <button class="tab-btn active" data-tab="agregar">Agregar Producto</button>
        <button class="tab-btn" data-tab="gestionar">Gestionar Productos</button>
      </div>

      <!-- Tab: Agregar Producto -->
      <section class="tab-content active" data-content="agregar">

        <div class="form-card">
          <form id="productForm" class="product-form">
            <div class="form-row">
              <div class="form-group">
                <label for="nombre">Nombre del producto</label>
                <input
                  type="text"
                  id="nombre"
                  name="nombre"
                  required
                  placeholder="iPhone 15 Pro Max"
                />
              </div>

              <div class="form-group">
                <label for="categoria">Categoría</label>
                <select id="categoria" name="categoria" required>
                  <option value="">Selecciona una categoría</option>
                  <option value="iphone">iPhone</option>
                  <option value="airpods">AirPods</option>
                  <option value="fundas">Fundas</option>
                  <option value="accesorios">Accesorios</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label for="descripcion">Descripción</label>
              <textarea
                id="descripcion"
                name="descripcion"
                rows="3"
                required
                placeholder="Describe las características del producto..."
              ></textarea>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="precio">Precio</label>
                <input
                  type="number"
                  id="precio"
                  name="precio"
                  step="0.01"
                  required
                  placeholder="1299.99"
                />
              </div>

              <div class="form-group">
                <label for="imagen">Imagen del producto</label>
                <input
                  type="file"
                  id="imagen"
                  name="imagen"
                  accept="image/*"
                  required
                  class="file-input"
                />
              </div>
            </div>

            <div id="imagePreview" class="image-preview"></div>

            <button type="submit" class="btn-submit" id="submitBtn">
              <span class="btn-text">Agregar producto</span>
              <span class="btn-loader" style="display: none;">Subiendo...</span>
            </button>
          </form>

          <div id="message" class="message" style="display: none;"></div>
        </div>
      </section>

      <!-- Tab: Gestionar Productos -->
      <section class="tab-content" data-content="gestionar">
        <div class="productos-list" id="productosList">
          {productos.length === 0 ? (
            <div class="empty-products">
              <p>No hay productos para gestionar</p>
            </div>
          ) : (
            <div class="productos-grid-admin">
              {productos.map((producto) => (
                <article class="producto-admin-card" data-id={producto.id}>
                  <div class="producto-admin-image">
                    <img src={producto.imagen_url} alt={producto.nombre} />
                  </div>
                  <div class="producto-admin-info">
                    <span class="producto-admin-categoria">
                      {CATEGORIAS[producto.categoria].emoji} {CATEGORIAS[producto.categoria].nombre}
                    </span>
                    <h3>{producto.nombre}</h3>
                    <p class="producto-admin-precio">${producto.precio.toLocaleString('es-AR')}</p>
                  </div>
                  <button 
                    class="btn-delete" 
                    data-id={producto.id}
                    data-nombre={producto.nombre}
                  >
                    Eliminar
                  </button>
                </article>
              ))}
            </div>
          )}
        </div>
      </section>
    </div>
  </main>
  
  <!-- Pasar variables de entorno al cliente -->
  <script is:inline define:vars={{ supabaseUrl, supabaseAnonKey }}>
    window.SUPABASE_URL = supabaseUrl;
    window.SUPABASE_ANON_KEY = supabaseAnonKey;
  </script>
</Layout>

<style>
